<div class="container show_container">
  <h2><%= @article.title %></h2>
  <p><%= @article.content %></p>
  <div class="buttons">
    <%= link_to "Overview", articles_path, class: "btn btn-primary custom-buttons" %>
    <%= link_to "Edit", edit_article_path(@article), class: "btn btn-primary custom-buttons" %>
    <%= link_to "Delete", article_path(@article),
    method: :delete, class: "btn btn-danger custom-buttons" %>
  </div>
</div>
